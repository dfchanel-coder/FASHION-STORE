<%- include('../partials/header') %>

<div class="container fade-in" style="padding-top: 30px; padding-bottom: 50px; max-width: 900px;">
    
    <a href="/admin/ordenes" style="display: inline-block; margin-bottom: 20px; color: #666;">
        <i class="fas fa-arrow-left"></i> Volver al listado
    </a>

    <div class="order-detail-card">
        <div class="order-header">
            <div>
                <h2 style="color: white; margin: 0;">Orden #<%= orden.id %></h2>
                <span style="font-size: 0.9rem; opacity: 0.9;">Fecha: <%= new Date(orden.createdAt).toLocaleString() %></span>
            </div>
            
            <form action="/admin/ordenes/estado/<%= orden.id %>" method="POST" style="background: rgba(255,255,255,0.2); padding: 10px; border-radius: 5px;">
                <select name="nuevoEstado" onchange="this.form.submit()" style="border: none; background: white; padding: 5px; border-radius: 3px; cursor: pointer;">
                    <option value="pendiente" <%= orden.estado === 'pendiente' ? 'selected' : '' %>>Pendiente</option>
                    <option value="completado" <%= orden.estado === 'completado' ? 'selected' : '' %>>Completado</option>
                    <option value="cancelado" <%= orden.estado === 'cancelado' ? 'selected' : '' %>>Cancelado</option>
                </select>
            </form>
        </div>

        <div class="order-body">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 40px;">
                
                <div class="info-group">
                    <h4><i class="fas fa-user"></i> Datos del Cliente</h4>
                    <div class="info-row"><span class="info-label">Nombre:</span> <%= orden.nombre %> <%= orden.apellido %></div>
                    <div class="info-row"><span class="info-label">Teléfono:</span> <%= orden.telefono %></div>
                    <div class="info-row"><span class="info-label">Email:</span> <%= orden.email || '-' %></div>
                    
                    <div style="margin-top: 15px;">
                        <a href="https://wa.me/<%= orden.telefono.replace(/[^0-9]/g, '') %>" target="_blank" class="btn" style="background: #25D366; font-size: 0.8rem;">
                            <i class="fab fa-whatsapp"></i> Contactar por WhatsApp
                        </a>
                    </div>
                </div>

                <div class="info-group">
                    <h4><i class="fas fa-truck"></i> Envío y Pago</h4>
                    <div class="info-row"><span class="info-label">Ciudad:</span> <%= orden.ciudad %></div>
                    <div class="info-row"><span class="info-label">Dirección:</span> <strong><%= orden.direccion %></strong></div>
                    <div class="info-row"><span class="info-label">Método:</span> <span style="text-transform: capitalize;"><%= orden.metodoPago %></span></div>
                    <div class="info-row"><span class="info-label">Total:</span> <span style="font-size: 1.2rem; color: var(--secondary); font-weight: bold;">$<%= orden.total %></span></div>
                </div>
            </div>

            <hr style="margin: 30px 0; border: 0; border-top: 1px solid #eee;">

            <div class="info-group">
                <h4><i class="fas fa-shopping-bag"></i> Productos</h4>
                <table class="detail-table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio Unit.</th>
                            <th style="text-align: center;">Cant.</th>
                            <th style="text-align: right;">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% detalleProductos.forEach(prod => { %>
                            <tr>
                                <td style="display: flex; align-items: center; gap: 15px;">
                                    <img src="/images/logo.png" alt="img" class="product-thumb" style="opacity: 0.5;">
                                    <span><%= prod.title %></span>
                                </td>
                                <td>$<%= prod.unit_price %></td>
                                <td style="text-align: center;"><%= prod.cantidad %></td>
                                <td style="text-align: right;">$<%= prod.unit_price * prod.cantidad %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>