<%- include('../partials/header') %>
<div class="container admin-panel fade-in">
    <h2>Panel de Administración</h2>
    
    <form action="/admin/crear" method="POST" style="background: #f9f9f9; padding: 20px; border-radius: 8px;">
        <h3>Agregar Producto</h3>
        <input type="text" name="modelo" placeholder="Modelo" required>
        <input type="text" name="descripcion" placeholder="Descripción">
        <div style="display: flex; gap: 10px;">
            <input type="number" name="precio" step="0.01" placeholder="Precio" required>
            <input type="number" name="stock" placeholder="Stock">
        </div>
        <div style="display: flex; gap: 10px;">
            <input type="text" name="tamaño" placeholder="Tamaño (S, M, L...)">
            <select name="categoria" required>
                <option value="ropa">Ropa</option>
                <option value="juguete">Juguete</option>
                <option value="electrodomesticos">Electrodomésticos</option>
                <option value="otros">Otros</option>
            </select>
        </div>
        <input type="text" name="imagenUrl" placeholder="URL de la imagen">
        <button type="submit" class="btn">Guardar Producto</button>
    </form>

    <hr style="margin: 40px 0; border: 0; border-top: 1px solid #eee;">

    <h3>Inventario</h3>
    <table style="width:100%; border-collapse: collapse;">
        <thead>
            <tr style="background: var(--primary); color: white;">
                <th style="padding:10px;">Modelo</th>
                <th>Cat</th>
                <th>Precio</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(p => { %>
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding:10px;"><%= p.modelo %></td>
                    <td><%= p.categoria %></td>
                    <td>$<%= p.precio %></td>
                    <td style="text-align: center;">
                        <form action="/admin/eliminar/<%= p.id %>" method="POST" onsubmit="return confirm('¿Borrar?');">
                            <button style="background: #e74c3c; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;">X</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>