<%- include('../partials/header') %>
<div class="container admin-panel fade-in" style="max-width: 800px;">
    
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2>Editar Producto</h2>
        <a href="/admin" class="btn" style="background: #777;">Cancelar</a>
    </div>

    <div class="admin-card">
        <form action="/admin/editar/<%= producto.id %>" method="POST">
            <div class="form-grid">
                <div class="form-group">
                    <label>Modelo / Nombre</label>
                    <input type="text" name="modelo" value="<%= producto.modelo %>" required>
                </div>
                <div class="form-group">
                    <label>URL Imagen</label>
                    <input type="text" name="imagenUrl" value="<%= producto.imagenUrl %>">
                </div>
            </div>
            
            <div class="form-group">
                <label>Descripción</label>
                <textarea name="descripcion" rows="3"><%= producto.descripcion %></textarea>
            </div>

            <div class="form-grid" style="grid-template-columns: 1fr 1fr 1fr;">
                <div class="form-group">
                    <label>Precio ($)</label>
                    <input type="number" name="precio" step="0.01" value="<%= producto.precio %>" required>
                </div>
                <div class="form-group">
                    <label>Stock</label>
                    <input type="number" name="stock" value="<%= producto.stock %>">
                </div>
                <div class="form-group">
                    <label>Tamaño</label>
                    <input type="text" name="tamaño" value="<%= producto.tamaño %>">
                </div>
            </div>

            <div class="form-group">
                <label>Categoría</label>
                <select name="categoria" required>
                    <option value="ropa" <%= producto.categoria === 'ropa' ? 'selected' : '' %>>Ropa</option>
                    <option value="juguete" <%= producto.categoria === 'juguete' ? 'selected' : '' %>>Juguete</option>
                    <option value="electrodomesticos" <%= producto.categoria === 'electrodomesticos' ? 'selected' : '' %>>Electrodomésticos</option>
                    <option value="otros" <%= producto.categoria === 'otros' ? 'selected' : '' %>>Otros</option>
                </select>
            </div>

            <button type="submit" class="btn" style="width: 100%; margin-top: 20px;">Guardar Cambios</button>
        </form>
    </div>
</div>
<%- include('../partials/footer') %>