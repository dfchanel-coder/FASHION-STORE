<%- include('partials/header') %>
<div class="container fade-in" style="padding: 40px 0; max-width: 800px;">
    <h2 style="margin-bottom: 20px;">Finalizar Compra</h2>
    
    <div style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
        <form action="/checkout/procesar" method="POST">
            
            <h3 style="color: var(--secondary);">1. Datos de Envío</h3>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                <input type="text" name="nombre" placeholder="Nombre" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                <input type="text" name="apellido" placeholder="Apellido" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            </div>
            <input type="text" name="direccion" placeholder="Dirección completa" required style="width: 100%; padding: 10px; margin-top: 15px; border: 1px solid #ddd; border-radius: 5px;">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 15px;">
                <input type="text" name="ciudad" placeholder="Ciudad / Departamento" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                <input type="tel" name="telefono" placeholder="Celular" required style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
            </div>
            <input type="email" name="email" placeholder="Correo Electrónico (Opcional)" style="width: 100%; padding: 10px; margin-top: 15px; border: 1px solid #ddd; border-radius: 5px;">

            <hr style="margin: 30px 0; border: 0; border-top: 1px solid #eee;">

            <h3 style="color: var(--secondary);">2. Método de Pago</h3>
            <div style="margin-top: 15px;">
                <label style="display: block; padding: 15px; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 10px; cursor: pointer;">
                    <input type="radio" name="metodoPago" value="transferencia" checked> 
                    <strong>Transferencia / Depósito Bancario</strong> (BROU / Prex / MiDinero)
                </label>
                <label style="display: block; padding: 15px; border: 1px solid #ddd; border-radius: 5px; cursor: pointer;">
                    <input type="radio" name="metodoPago" value="mercadopago"> 
                    <strong>Mercado Pago</strong> (Tarjetas hasta 12 cuotas, RedPagos, Abitab)
                </label>
            </div>

            <div style="margin-top: 30px; text-align: right;">
                <p style="font-size: 1.2rem; font-weight: bold; margin-bottom: 15px;">Total a Pagar: $<%= total %></p>
                <button type="submit" class="btn" style="width: 100%; padding: 15px; font-size: 1.1rem;">Confirmar Pedido</button>
            </div>
        </form>
    </div>
</div>
<%- include('partials/footer') %>